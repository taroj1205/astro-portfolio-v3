---
export function getStaticPaths() {
  return [{ params: { lang: 'ja' } }]
}

import Layout from '@/components/layouts/default.astro'
---

<Layout link="404">
  <div id="not-found" class="flex flex-col items-center gap-8 text-center">
    <div class="flex flex-col gap-4">
      <h1
        class="animate-fade-up text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
      >
        404 - Page Not Found
      </h1>
      <p
        class="mx-auto max-w-[700px] animate-fade-up text-muted-foreground duration-700 md:text-xl"
      >
        Oops! The page you are looking for does not exist. It might have been
        moved or deleted.
      </p>
    </div>
    <a
      href="/"
      id="go-home"
      class:list={[
        'inline-flex h-9 items-center justify-center rounded-md px-4 py-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50',
        'bg-primary text-primary-foreground shadow hover:bg-primary/90',
        'animate-fade-up duration-700',
      ]}>Go Home</a
    >
  </div>
</Layout>
