---
import { cn } from '@/lib/utils'
import SkillCategory from './skill-category.astro'
import { getUI } from '@/utils/i18n.astro'

const { lang } = Astro.params
const { class: className, ...props } = Astro.props
const { sections, skills } = getUI(lang)
---

<section
  class={cn(
    'w-full py-16',
    className
  )}
  {...props}
>
  <div class="px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-8 text-center"
    >
      <div class="space-y-4">
        <h2
          class="animate-fade-up text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
        >
          {sections.skills.title}
        </h2>
        <p
          class="max-w-[800px] animate-fade-up text-xl text-muted-foreground duration-700 md:text-2xl/relaxed"
        >
          {sections.skills.description}
        </p>
      </div>
      <div
        class="grid w-full max-w-6xl grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4"
      >
        {
          Object.entries(skills).map(([key, category]) => (
            <SkillCategory title={category.title} key={key} />
          ))
        }
      </div>
    </div>
  </div>
</section>
