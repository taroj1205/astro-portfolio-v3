---
import type { ImageMetadata } from 'astro'
import SkillItem from './skill-item.astro'

const { title, skills } = Astro.props
---

<div
  class="animate-fade-up space-y-6 rounded-xl border border-primary/10 bg-card p-8 shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
>
  <h3 class="text-2xl font-bold text-primary">{title}</h3>
  <div class="grid gap-4">
    {
      skills.map((skill: { icon: any; label: any; image: ImageMetadata }) => (
        <SkillItem icon={skill.icon} image={skill.image} label={skill.label} />
      ))
    }
  </div>
</div>
