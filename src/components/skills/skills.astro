import GitHubImage from '@/assets/icons/github.svg'
import Auth0Image from '@/assets/icons/auth0.svg'
import JavaScriptImage from '@/assets/icons/javascript.svg'
import TypeScriptImage from '@/assets/icons/typescript.svg'
import MarkdownImage from '@/assets/icons/markdown.svg'
import PythonImage from '@/assets/icons/python.svg'
import HtmlImage from '@/assets/icons/html.svg'
import CssImage from '@/assets/icons/css.svg'
import NextJSImage from '@/assets/icons/nextjs.svg'
import ExpressJSImage from '@/assets/icons/expressjs.svg'
import ReactImage from '@/assets/icons/react.svg'
import NodeJSImage from '@/assets/icons/nodejs.svg'
import TailwindCSSImage from '@/assets/icons/tailwind.svg'
import MySQLImage from '@/assets/icons/mysql.svg'
import SQLiteImage from '@/assets/icons/sqlite.svg'
import PostgreSQLImage from '@/assets/icons/postgresql.svg'
import SupabaseImage from '@/assets/icons/supabase.svg'
import VercelImage from '@/assets/icons/vercel.svg'
import NetlifyImage from '@/assets/icons/netlify.svg'
import FlaskImage from '@/assets/icons/flask.svg'

export const skillImages = {
  GitHub: GitHubImage,
  Auth0: Auth0Image,
  JavaScript: JavaScriptImage,
  TypeScript: TypeScriptImage,
  Markdown: MarkdownImage,
  Python: PythonImage,
  HTML: HtmlImage,
  CSS: CssImage,
  NextJS: NextJSImage,
  ExpressJS: ExpressJSImage,
  React: ReactImage,
  NodeJS: NodeJSImage,
  TailwindCSS: TailwindCSSImage,
  MySQL: MySQLImage,
  SQLite: SQLiteImage,
  PostgreSQL: PostgreSQLImage,
  Supabase: SupabaseImage,
  Vercel: VercelImage,
  Netlify: NetlifyImage,
  Flask: FlaskImage,
}

export const getImage = (key: string) => {
  const keyMap: { [key: string]: keyof typeof skillImages } = {
    GitHub: 'GitHub',
    Auth0: 'Auth0',
    JavaScript: 'JavaScript',
    TypeScript: 'TypeScript',
    Markdown: 'Markdown',
    Python: 'Python',
    HTML: 'HTML',
    CSS: 'CSS',
    'Next.js': 'NextJS',
    Express: 'ExpressJS',
    'React.js': 'React',
    'Node.js': 'NodeJS',
    'Tailwind CSS': 'TailwindCSS',
    MySQL: 'MySQL',
    SQLite: 'SQLite',
    PostgreSQL: 'PostgreSQL',
    Supabase: 'Supabase',
    Vercel: 'Vercel',
    Netlify: 'Netlify',
    Flask: 'Flask',
  }

  if (Object.keys(keyMap).includes(key) === false) {
    return GitHubImage
  }

  return skillImages[keyMap[key]]
}
