---
import { cn } from '@/lib/utils'

const { icon: Icon, label, class: className } = Astro.props
---

<div
  class={cn(
    'skill-item flex items-center gap-3 rounded-lg bg-background/50 p-3 transition-all duration-300 hover:bg-primary/10',
    className
  )}
>
  <div class="skill-icon h-10 w-10 rounded-full bg-primary/20 p-2 text-primary">
    <Icon class="h-6 w-6" />
  </div>
  <span class="text-sm font-medium">{label}</span>
</div>
