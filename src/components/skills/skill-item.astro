---
import { cn } from '@/lib/utils'
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
  image: ImageMetadata
  label: string
  class?: string
}

const { image, label, class: className } = Astro.props
---

<div
  class={cn(
    'skill-item flex items-center gap-3 rounded-lg bg-background/50 p-3 transition-all duration-300 hover:bg-primary/10',
    className
  )}
>
  <div class="skill-icon h-10 w-10 rounded-full bg-primary/20 p-2 text-primary">
    {image && <Image src={image} alt={label} width={24} height={24} />}
  </div>
  <span class="text-sm font-medium">{label}</span>
</div>
